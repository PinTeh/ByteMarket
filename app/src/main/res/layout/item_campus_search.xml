<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cv_item_campus_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:layout_height="70dp"
    app:cardCornerRadius="3dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        >

        <ImageView
            android:visibility="invisible"
            android:id="@+id/iv_search_selected"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:src="@mipmap/idea"
            android:layout_margin="5dp"
            android:contentDescription="@string/contentDescription" />

        <ImageView
            android:id="@+id/iv_item_campus_logo"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:src="@mipmap/avatar"
            android:contentDescription="@string/contentDescription"
            android:layout_toRightOf="@+id/iv_search_selected"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toEndOf="@id/iv_item_campus_logo"
            >
            <TextView
                android:id="@+id/tv_item_campus_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="XX大学"
                android:textSize="18sp"
                android:textColor="@color/colorFontLightDark"
                />

            <TextView
                android:id="@+id/tv_item_campus_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="X件商品正在出售"
                android:ellipsize="end"
                android:textSize="16sp"
                android:maxLines="1"
                />

        </LinearLayout>



    </RelativeLayout>


</androidx.cardview.widget.CardView>