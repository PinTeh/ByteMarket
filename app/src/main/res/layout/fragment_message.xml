<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E9E7E7"
    tools:context=".ui.fragment.MessageFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_message"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimary"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="消息中心"
            android:layout_gravity="center"
            />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        >

        <RelativeLayout
            android:id="@+id/test_event"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:padding="10dp"
            android:background="@android:color/white"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_message_avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/avatar_circle"
                />

            <TextView
                android:id="@+id/tv_message_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我和亚索都喜欢浪"
                android:layout_toEndOf="@+id/civ_message_avatar"
                android:layout_marginStart="15dp"
                android:textColor="@android:color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最低50"
                android:layout_toEndOf="@+id/civ_message_avatar"
                android:layout_below="@+id/tv_message_username"
                android:layout_marginStart="15dp"
                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/goods1"
                />


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
