    android:layout_height="match_parent"
    tools:context=".ui.activity.StartActivity">

    <ImageView
        android:id="@+id/iv_start"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/startup_rocket"
